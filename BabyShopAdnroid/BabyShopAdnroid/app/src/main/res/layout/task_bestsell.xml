<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameProduct"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:background="@drawable/custom_voucher">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imProduct"
            android:layout_width="80dp"
            android:layout_height="106dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sua_1" />

        <LinearLayout
            android:layout_width="262dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/proPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="800gr"
                    android:textColor="@color/Babyshop_color_1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="789.000đ"
                    android:textColor="@color/Babyshop_color_main"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtNameProduct"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center|start"
                android:text="Sữa Aptamil Advanced Anh số 3 800g (1 - 3 tuổi) "
                android:textColor="@color/Babyshop_color_1"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>