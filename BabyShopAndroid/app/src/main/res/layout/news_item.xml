<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameNews"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <LinearLayout
        android:id="@+id/linearlayoutNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/bg_radius"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgNews"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/image_radius"
                    android:elevation="20dp"
                    android:src="@drawable/news1"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/label" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BabyCare"
                            android:textColor="#F26D6D"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dateNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="06/04/2020" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/titleNews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:maxLength="50"
                        android:text="Mẹo mua sắm tại BabyCare"
                        android:textColor="#272459"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contentNews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:maxLength="130"
                        android:text="Nhân viên giao hàng tận nhà, bạn đưa tiền theo giá trị mặt hàng và phí giao hàng cho nhân viên."
                        android:textColor="#75759E" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>